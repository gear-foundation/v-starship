FROM node:20-alpine

MAINTAINER gear

WORKDIR /app

COPY . .

RUN apk update

RUN apk add xsel

ARG VITE_NODE_ADDRESS \
    VITE_CONTRACT_ADDRESS \
    VITE_NFT_SHOWROOM_ADDRESS \
    VITE_INDEXER_ADDRESS
ENV VITE_NODE_ADDRESS=${VITE_NODE_ADDRESS} \
    VITE_CONTRACT_ADDRESS=${VITE_CONTRACT_ADDRESS} \
    VITE_NFT_SHOWROOM_ADDRESS=${VITE_NFT_SHOWROOM_ADDRESS} \
    VITE_INDEXER_ADDRESS=${VITE_INDEXER_ADDRESS}

RUN npm install --force

RUN npm run build

RUN npm install --global serve

CMD ["serve", "-s", "/app/dist"]
